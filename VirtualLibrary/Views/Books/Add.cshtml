@{
}
@model VirtualLibrary.Models.AddBookViewModel

<form  method="post">
    <h1>Add Book</h1>

    <div class="mt-2">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

     <div class="mt-2">
        <label class="form-label">Author</label>
        <input type="text" class="form-control" asp-for="Author" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div class="mt-2">
        <label class="form-label">Published Year</label>
        <input type="text" class="form-control" asp-for="PublishedYear" />
        <span asp-validation-for="PublishedYear" class="text-danger"></span>
    </div>

    <div class="mt-2">
        <label class="form-label">Genre</label>
        <input type="text" class="form-control" asp-for="Genre" />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <div class="mt-2">
        <label class="form-label">Available Copies</label>
        <input type="text" class="form-control" asp-for="AvailableCopies" />
        
    </div>

    <div class="mt-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Books" asp-action="List" class="btn btn-dark">Cancel</a>
    </div>



</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}