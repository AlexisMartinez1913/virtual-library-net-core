@{
}
@model List<VirtualLibrary.Models.Entities.Book>

<h1>List of Books</h1>

<div class="mb-2">
    <a class="btn btn-success" asp-controller="Books" asp-action="Add">Add Book</a>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Author</th>
            <th>Published Year</th>
            <th>Genre</th>
            <th>Available Copies</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model) 
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.PublishedYear</td>
                <td>@book.Genre</td>
                <td>@book.AvailableCopies</td>
                <td>
                    <a class="btn btn-warning" asp-controller="Books" asp-action="Edit" asp-route-id="@book.Id">Edit</a>
                    <form asp-controller="Books" asp-action="Delete" asp-route-id="@book.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirmAction()">Delete</button>
                    </form>
                </td>
                
            </tr>
        }
    </tbody>

</table>

@section Scripts {
    <script>
        function confirmAction() {
            return confirm("Are you sure ?");
        }
    </script>
}